{
  "name": "pacman-carousel",
  "version": "0.0.3",
  "description": "High-performance Pac-Man carousel component for Angular",
  "keywords": [
    "carousel",
    "pacman",
    "wallpaper",
    "angular"
  ],
  "author": {
    "name": "Fuyun",
    "url": "https://www.ifuyun.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/ifuyun/pacman-carousel#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ifuyun/pacman-carousel.git"
  },
  "bugs": {
    "url": "https://github.com/ifuyun/pacman-carousel/issues"
  },
  "scripts": {
    "start": "ng serve demo",
    "build": "npm run build:carousel && npm run build:md",
    "build:carousel": "ng build carousel --configuration production",
    "build:md": "cp README.md dist/carousel/README.md",
    "publish": "npm publish ./dist/carousel",
    "watch:carousel": "ng build carousel --watch --configuration development",
    "watch:demo": "ng build demo --watch --configuration development",
    "format": "prettier --write \"projects/**/*.ts\"",
    "test": "ng test carousel",
    "test:watch": "ng test carousel --watch"
  },
  "dependencies": {
    "@angular/common": "^21.0.1",
    "@angular/compiler": "^21.0.1",
    "@angular/core": "^21.0.1",
    "@angular/platform-browser": "^21.0.1",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.1",
    "jsdom": "^27.2.0",
    "less": "^4.2.0",
    "ng-packagr": "^21.0.0",
    "prettier": "^3.7.1",
    "typescript": "~5.9.3",
    "vitest": "^4.0.14"
  },
  "packageManager": "npm@11.6.4"
}
